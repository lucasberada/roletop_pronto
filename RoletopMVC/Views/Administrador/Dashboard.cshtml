@model RoletopMVC.ViewModels.DashboardViewModel

 <main>

<br>

         <h3>STATUS DOS EVENTOS</h3>
            <section id="apr">
<br>

            <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4><i class="fas fa-calendar-check"></i>
                    <p>@Model.PedidosAprovados</p>
                </div>

                <div class="box-status-pedidos pendentes">
                        <h4>pendentes</h4><i class="fas fa-hourglass-half"></i>
                        <p>@Model.PedidosPendentes</p>
                    </div>

                    <div class="box-status-pedidos reprovados">
                            <h4>reprovados</h4><i class="fas fa-skull-crossbones"></i>
                            <p>@Model.PedidosReprovados</p>
                        </div>
                    </section>
<br>

                    <h3>LISTA DE EVENTOS</h3>
<br>
                    <table>
                            <thead>
                                <tr>
                                    <th rowspan="2">Nome</th>
                                    <th rowspan="2">data do evento</th>
                                    <th rowspan="2">descri√ßao do evento</th>
                                    <th rowspan="2">cpf</th>
                                    <th rowspan="2">rg</th>
                                    <th rowspan="2">email</th>
                                    <th rowspan="2">luz e som</th>
                                    <th rowspam="2">confirmar</th>
                                    <th rowspam="2">negar</th>
                                </tr>
                                
                                    
                                    
                            
                            </thead>
                          
                            <tbody>
                                @foreach (var pedido in Model.Pedidos)
                                {
                                     <tr>
                                    <td>@pedido.Cliente.Nome</td>
                                    <td>@pedido.DataDoEvento</td>
                                    <td>@pedido.Descricao</td>
                                    <td>@pedido.Cliente.CPF</td>
                                    <td>@pedido.Cliente.RG</td>
                                    <td>@pedido.Cliente.Email</td>
                                     <td>@pedido.LuzSom</td>
                                    <td><a  href='@Url.Action("Aprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-check-circle"></i></a></td>
                                    <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-ban"></i></a></td>
                                    
                                </tr>
                                }
                               
                              
                            </tbody>
                            
                        </table>
                          <br>
                            <br>
                              <br>
                        <p>agendamentos atualizados em @DateTime.Now</p>
           <br>
             <br>
              <br>
               <br>

        </main>