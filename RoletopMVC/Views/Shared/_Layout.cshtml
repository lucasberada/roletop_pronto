@model RoletopMVC.ViewModels.BaseViewModel

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rolê top</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link href="img/logo.png" rel="icon" type="image/x-icon" />
    @if(!"Home".Equals(@Model.NomeView))
    {
        <link href="~/css/login.css" rel="stylesheet" type="text/css">
    }
     @if("Dashboard".Equals(@Model.NomeView))
    {
        <link href="~/css/style-dashboard.css" rel="stylesheet" type="text/css">
    }
    <script src="https://kit.fontawesome.com/349a64cb04.js"></script>
</head>

<body>
    <header>
        <nav>
            <div id="nav">
                <ul>
                    <li id="bt-mobile-menu">
                        <!-- HTML para colocar os ícones do FA -->
                        <a href="javascript:void(0);" class="icon" onclick="toggleMobileMenu()">
                            <i class="fa fa-bars"></i>
                        </a>,
                    </li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="Index" >HOME</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href='@Url.Action("index", "Home")#galeria'>GALERIA</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href='@Url.Action("index", "Home")#regras'>REGRAS</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Pedido" asp-action="Index">FAÇA SEU EVENTO</a></li>
                     @if(string.IsNullOrEmpty(@Model.UsuarioEmail))
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Login">LOGIN/CADASTRO</a></li>
                    }
                    else
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Logoff">LOGOFF</a></li>
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Historico">SEU EVENTO</a></li>
                    }
                    

                    
                </ul>
            </div>
            
            
             @if(!"Home".Equals(@Model.NomeView))
        {
            Html.RenderPartial("_HeaderHomePage");
        }
              @if("Home".Equals(@Model.NomeView))
        {
            Html.RenderPartial("_HeaderHomePage");
        }
        </nav>
       
    </header>
            @RenderBody()

              <footer>
        <section>
            <div class="section-container">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.8869961505543!2d-46.648477085071065!3d-23.53656648469522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce5843deade6e3%3A0x124f377d06c7e71f!2sAlameda+Bar%C3%A3o+de+Limeira%2C+539+-+Campos+El%C3%ADseos%2C+S%C3%A3o+Paulo+-+SP%2C+01202-001!5e0!3m2!1sen!2sbr!4v1550223658410"></iframe>
                <P>
                    <adress>alameda barao de Limeira</adress>
                </P>
                <p>campos eliseos são paulo</p>
                <p>cep:01202-000</p>
            </div>
        </section>
    </footer>

    <script>
            function toggleMobileMenu() {
                var ul = document.querySelector("nav ul");
                var commonButtons = document.querySelectorAll("nav .bt-common-menu");
                var icon = document.querySelector(".icon > i");
    
                ul.classList.toggle("mobile-mode");
    
                if (icon.classList.contains("fa-bars")) {
                    icon.classList.remove("fa-bars");
                    icon.classList.remove("fa");
    
                    icon.classList.add("fas");
                    icon.classList.add("fa-crown");
                } else {
                    icon.classList.remove("fas");
                    icon.classList.remove("fa-crown");
    
                    icon.classList.add("fa");
                    icon.classList.add("fa-bars");
                }
    
                for (var button of commonButtons) {
                    button.classList.toggle("active");
                }
    
            }
            
        </script>


</body>
</html>

    